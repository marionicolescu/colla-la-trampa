rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Función auxiliar para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Colección de miembros: Lectura pública (para mostrar lista y login), escritura autenticada
    match /members/{memberId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Colección de productos: Lectura pública (catálogo), escritura autenticada
    match /products/{productId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Configuración de la app: Lectura pública, escritura autenticada
    match /app_settings/{settingId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Transacciones: Lectura pública (dashboard), escritura autenticada
    match /transactions/{transactionId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Regla por defecto para bloquear todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
